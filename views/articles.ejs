<html>

<head>
    <title>Article</title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.16.0/umd/popper.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.4.1/js/bootstrap.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/bootbox.js/5.4.0/bootbox.min.js"></script>
</head>

<body>

    <nav class="navbar navbar-expand-md navbar-dark bg-dark">
        <div class="navbar-collapse collapse w-100 order-1 order-md-0 dual-collapse2">
            <ul class="navbar-nav mr-auto">
                <li class="nav-item active">
                    <a class="nav-link" href="/articles">Home</a>
                </li>
                <% if (user) { %>
                <li class="nav-item">
                    <a class="nav-link" href="/articles/add">Add Article</a>
                </li>
                <% } %>
                <li class="nav-item">
                    <a class="nav-link" href="/about">About</a>
                </li>
            </ul>
        </div>
        <div class="navbar-collapse collapse w-100 order-3 dual-collapse2">
            <ul class="navbar-nav ml-auto">
                <% if (user) { %>
                <li class="nav-item">
                    <a class="nav-link" href="/users/logout">Logout</a>
                </li>
                <% } else { %>
                <li class="nav-item">
                    <a class="nav-link" href="/users/registration">Register</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="/users/login">Login</a>
                </li>
                <% } %>
            </ul>
        </div>
    </nav>

    <!-- Call the message template -->
    <%-messages('message', locals) %>

    <div class="container" style="padding: 25px 50px 75px 0px ;">
        <h1>Articles</h1>
        <% if (articlesResults.length>0) { %>
        <ul class="list-group">
            <% articlesResults.forEach(function(article){ %>
            <li class="list-group-item"> <a href="/articles/<%=article.id %>"> <%= article.title %> </a> </li>
            <% }) %>
        </ul>
        <% } else { %>
        <h3>No articles are founded</h3>

        <%  if(!user){  %>
        <h3 style="color: red;">To add an article, you should login</h3>
        <% } %>
        <% } %>
        <hr color="#000000">
        <strong>Copyright &COPY; 2020</strong>
    </div>
</body>

</html>