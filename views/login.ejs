<html>

<head>
    <title>User Login</title>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.16.0/umd/popper.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.4.1/js/bootstrap.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/bootbox.js/5.4.0/bootbox.min.js"></script>
</head>

<body>

    <%- include('./header') %>

    <!-- Call the message template view -->
    <%-messages('message2', locals) %>

    <div class="container" style="padding: 25px 50px 75px 0px ;">
        <h1>User Login</h1>
        <form method="POST" action="/users/login">
            <div class="form-group">
                <label for="username">Username</label>
                <input type="text" class="form-control" placeholder="User Name" id="username" name="username" required>
            </div>
            <div class="form-group">
                <label for="password">Password</label>
                <input type="password" class="form-control" placeholder="Password" id="password" name="password"
                    required>
            </div>
            <button class="btn btn-info" type="submit" class="btn btn-primary">Sign In</button>
            <button class="btn btn-info" type="reset" class="btn btn-primary">Clear</button>
        </form>

        <hr>
        <strong>Copyright &COPY; 2020</strong>
    </div>

</body>

</html>